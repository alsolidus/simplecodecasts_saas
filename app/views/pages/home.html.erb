

<div class = "jumbotron text-center">
    <h1>Welcome to CHS Enterprise Command Center / NOC </h1>
    <h3>Site providing facility support information and important links.</h3>
 </div>
 <div class="row">
     <% if user_signed_in? %>
    <div class="col-md-6">  
    <div class="well">
        <h2 class="text-center">Your Profile</h2>
         <% if current_user.profile %>
             <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
             <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
             
         <% else %>
             <p>Working to setup links to manage future Hospital resources</p>
             <%= link_to "Create your profile!", new_user_profile_path(current_user),class: 'btn btn-primary btn-lg btn-block' if current_user %>
             <% end %>
             </div>
               </div>
               
    <div class="col-md-6">  
    <div class="well">
        <h2 class="text-center"> The Hospitals</h2>
        <p class="text-center">Check out the sites to get additional information and options!</p>
        <%= link_to "Link to your Hospitals", users_path, class: "btn btn-primary btn-lg btn-block" %>
    </div>
    </div>
     <% else %>
         <div class="col-md-6">
             <div class="well">
                <h2 class="text-center">Basic Members</h2>
                <h4 class='text-center'>Sign up for basic access to infrastructure information.</h4>
                <%= link_to "Sign up", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
              
             </div>
         </div>
         <div class="col-md-6">
             <div class="well">
                <div class="Well">
                  <h2 class="text-center">Pro Admin</h2>
                   <h4 class='text-center'>Request advance detail access.</h4>
                   <%= link_to "Corporate User Signup", new_user_registration_path(plan: @CHS_IT_Member_plan.id), class: 'btn btn-success btn-lg btn-block' %>
                </div>
         </div>
     <% end %>
 </div>